<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context="com.jing.zhou.phonenumberlocationdemo.MainActivity">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#121212"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/activity_main_input_et"
            android:hint="@string/please_input_phone_number"
            android:maxLength="16"
            android:focusable="true"
            android:background="@null"
            android:inputType="text"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="39dp" />



    </LinearLayout>
    <TextView
        android:id="@+id/activity_main_query_tv"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/btn_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/click_query" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#121212"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_main_phone_num_tv"
            android:maxLength="16"
            android:focusable="true"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="39dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#121212"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_main_operator_tv"
            android:maxLength="16"
            android:focusable="true"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="39dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#121212"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/phone_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_main_province_tv"
            android:maxLength="16"
            android:focusable="true"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="39dp" />



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_border"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#121212"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:text="@string/location_operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/activity_main_location_operator_tv"
            android:maxLength="16"
            android:focusable="true"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="39dp" />



    </LinearLayout>
</LinearLayout>
